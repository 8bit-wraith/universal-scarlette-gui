// Main Scarlett GUI Application UI

import { Button, VerticalBox, HorizontalBox, ListView, ScrollView } from "std-widgets.slint";

// Color palette matching Focusrite branding
export global ColorPalette {
    // Focusrite Red
    in-out property <color> primary: #E2231A;
    in-out property <color> primary-hover: #FF2B1F;

    // Dark theme colors
    in-out property <color> background: #2B2B2B;
    in-out property <color> surface: #3C3C3C;
    in-out property <color> surface-light: #4A4A4A;

    // Text colors
    in-out property <color> text-primary: #FFFFFF;
    in-out property <color> text-secondary: #B0B0B0;
    in-out property <color> text-disabled: #707070;
}

// Device info struct
export struct DeviceItem {
    name: string,
    serial: string,
    status: string,
}

// Main application window
export component MainWindow inherits Window {
    title: "Scarlett Control";
    preferred-width: 800px;
    preferred-height: 600px;
    background: ColorPalette.background;

    // Callbacks
    callback scan-devices();
    callback select-device(int);
    callback open-routing();
    callback open-mixer();
    callback open-levels();

    // Properties
    in-out property <[DeviceItem]> devices: [];
    in-out property <string> status-text: "No devices found";

    VerticalBox {
        padding: 20px;
        spacing: 20px;

        // Header
        HorizontalBox {
            alignment: start;

            Text {
                text: "Scarlett Control Panel";
                font-size: 24px;
                font-weight: 700;
                color: ColorPalette.text-primary;
            }
        }

        // Device list section
        VerticalBox {
            spacing: 10px;

            HorizontalBox {
                Text {
                    text: "Connected Devices";
                    font-size: 18px;
                    font-weight: 600;
                    color: ColorPalette.text-primary;
                }

                Rectangle { horizontal-stretch: 1; }

                Button {
                    text: "Scan for Devices";
                    clicked => { root.scan-devices(); }
                }
            }

            // Device list
            Rectangle {
                height: 200px;
                background: ColorPalette.surface;
                border-radius: 8px;

                if devices.length == 0: Text {
                    text: status-text;
                    color: ColorPalette.text-secondary;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                if devices.length > 0: ScrollView {
                    ListView {
                        for device[index] in devices: Rectangle {
                            height: 60px;
                            background: touch-area.has-hover ? ColorPalette.surface-light : transparent;
                            border-radius: 4px;

                            touch-area := TouchArea {
                                clicked => { root.select-device(index); }
                            }

                            HorizontalBox {
                                padding: 12px;
                                spacing: 12px;

                                VerticalBox {
                                    alignment: start;
                                    spacing: 4px;

                                    Text {
                                        text: device.name;
                                        font-size: 16px;
                                        font-weight: 600;
                                        color: ColorPalette.text-primary;
                                    }

                                    Text {
                                        text: "Serial: " + device.serial;
                                        font-size: 12px;
                                        color: ColorPalette.text-secondary;
                                    }
                                }

                                Rectangle { horizontal-stretch: 1; }

                                Text {
                                    text: device.status;
                                    font-size: 14px;
                                    color: ColorPalette.primary;
                                    vertical-alignment: center;
                                }
                            }
                        }
                    }
                }
            }
        }

        // Control buttons
        HorizontalBox {
            spacing: 12px;
            alignment: start;

            Button {
                text: "Routing";
                enabled: devices.length > 0;
                clicked => { root.open-routing(); }
            }

            Button {
                text: "Mixer";
                enabled: devices.length > 0;
                clicked => { root.open-mixer(); }
            }

            Button {
                text: "Levels";
                enabled: devices.length > 0;
                clicked => { root.open-levels(); }
            }
        }

        // Status bar
        Rectangle {
            height: 30px;
            background: ColorPalette.surface;
            border-radius: 4px;

            HorizontalBox {
                padding: 8px;

                Text {
                    text: "Ready";
                    font-size: 12px;
                    color: ColorPalette.text-secondary;
                }
            }
        }

        Rectangle { vertical-stretch: 1; }
    }
}
